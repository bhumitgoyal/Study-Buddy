<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="330dp"
        android:layout_height="87dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/InfosubjectCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="BMAT102L"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/SearchtextView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/InfoTimeBox"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="52dp" />

            <TextView
                android:id="@+id/inforoomBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room No:"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/InforoomNo"
                app:layout_constraintHorizontal_bias="0.883"
                app:layout_constraintStart_toEndOf="@+id/InfosubjectCode"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/InfoTimeBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00 AM - 10:00 AM"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="52dp" />

            <TextView
                android:id="@+id/InforoomNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Q-1210"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/infoOkButton"
                android:layout_width="29dp"
                android:layout_height="27dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/tick"
                tools:layout_editor_absoluteY="44dp" />

            <ImageButton
                android:id="@+id/infoCrossButton"
                android:layout_width="29dp"
                android:layout_height="27dp"
                android:layout_marginStart="30dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toStartOf="@+id/infoOkButton"
                app:layout_constraintStart_toEndOf="@+id/InfoTimeBox"
                app:srcCompat="@drawable/arrowleft"
                tools:layout_editor_absoluteY="44dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/InfobyNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="4dp"
        android:text="By: "
        app:layout_constraintEnd_toStartOf="@+id/InfoNameBox"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/InfoNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="112dp"
        android:text="Bhumit Goyal"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>